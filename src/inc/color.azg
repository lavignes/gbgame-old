@if ! @isdef COLOR_INC
@defn COLOR_INC, 1

;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
; Define a color in the palette format (RGB555 little-endian)
;
; args:
;   @1 - red color 0-255
;   @2 - green color 0-255
;   @3 - blue color 0-255
;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;;
@macro COLOR_DB, 3
	@db $FF & (((@1) >>> 3) | (((@2) >>> 3) << 5))
	@db $FF & (((@2) >>> 6) | (((@3) >>> 3) << 5))
@endmacro

@endif ; COLOR_INC
